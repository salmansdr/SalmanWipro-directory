{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start-dotnet-api",
      "type": "shell",
      "command": "dotnet run",
      "args": [],
      "options": {
        "cwd": "${workspaceFolder}/Server/ConstructionAPI"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "dotnet",
        "pattern": {
          "regexp": ".*",
          "file": 1,
          "location": 2,
          "message": 0
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "Now listening on: .+"
        }
      },
      "group": "build",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "start-react-app",
      "type": "shell",
      "command": "npm start",
      "args": [],
      "options": {
        "cwd": "${workspaceFolder}/react-app"
      },
      "isBackground": true,
      "group": "build",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "kill-all-processes",
      "type": "shell",
      "command": "pkill -f 'dotnet run' || true; pkill -f 'node' || true; pkill -f 'react-scripts' || true",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always"
      }
    }
  ]
}
